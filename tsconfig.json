{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "disableSizeLimit": true,
    "strictPropertyInitialization": false,
    "outDir": "lib",
    "moduleResolution": "node",
    "types": ["jest", "node"],
    "baseUrl": "."
  },
  "compileOnSave": false,
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
