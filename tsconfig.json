{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    // "strict": true,
    "declaration": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "disableSizeLimit": true,
    "outDir": "lib",
    "rootDirs": ["src", "./typings", "node_modules/@types"],
    "types": ["jest", "node"]
    // "baseUrl": "./"
  },
  "compileOnSave": false,
  "include": ["src", "typings"]
}
